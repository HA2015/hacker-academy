<% provide(:title, 'Create An Event') %>
<h2>Create a new event</h2>

<% if logged_in? && current_user.sponsor? %>
  <p>
    Thank you for taking the time to familiarize yourself with our site. Please take care 
    creating your event, as sponsors are not allowed to edit existing events. If you need 
    your event to be edited, please contact us at info@hackeracademy.org. 
  <p>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :desc , class: "form-control" %>

      <%= f.label :date %>
      <%= f.date_select :date %>

      <%= f.label :start_time_in_UTC_EDT_plus_4 %>
      <%= f.time_select :start_time, 
          ampm: true, 
          ignore_date: true,
          minute_step: 15 %> 

      <%= f.label :finish_time_in_UTC_EDT_plus_4 %>
      <%= f.time_select :finish_time, 
          ampm: true, 
          ignore_date: true,
          minute_step: 15 %> 

      <%= f.submit "Create event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


